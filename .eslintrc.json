{
    "globals": {
        "allVal": true,
        "FullLists": true,
        "React": true,
        "ReactDOM": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {"vars": "all", "args": "after-used", "ignoreRestSiblings": false,  "caughtErrors": "none" }
        ]
    }
}